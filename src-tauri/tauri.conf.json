{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Anko",
  "version": "0.1.2",
  "identifier": "com.anko.sql",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "Anko",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZBNjQ3M0M5NUI3QjUxQzcKUldUSFVYdGJ5WE5rK3JqUjQyc1dEaHBTUXlHMVlFQlZ6Vi9PYXZDVVM1SHoyaGQ4RDZkTVYyOVUK",
      "endpoints": [
        "https://github.com/Valkyrie-Resistance/Anko/releases/latest/download/latest.json"
      ]
    }
  }
}
